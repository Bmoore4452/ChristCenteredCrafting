{% layout 'theme-landing' %}

<!-- Announcement Bar -->
<div class="announcement-bar">
  <p>FOR YOUR CONVENIENCE WE ARE NOW OFFERING AFTER PAY AND SHOP PAY PAYMENT OPTIONS.</p>
</div>

<!-- Collection Header -->
<section class="collection-header">
  <div class="section-container">
    <h1 class="page-title">
      {% if collection.title == 'Products' or collection.handle == 'all' %}
        <span class="gradient-text">Our Products</span>
      {% else %}
        {{ collection.title }}
      {% endif %}
    </h1>
    {% if collection.description != blank %}
      <div class="collection-description">
        {{ collection.description }}
      </div>
    {% else %}
      <p class="collection-subtitle">Handmade with love and faith</p>
    {% endif %}
  </div>
</section>

<!-- Filters and Sort -->
<section class="collection-controls">
  <div class="section-container">
    <div class="controls-wrapper">
      <div class="product-count">
        {{ collection.products_count }} {% if collection.products_count == 1 %}product{% else %}products{% endif %}
      </div>
      <div class="sort-by">
        <label for="SortBy">Sort by:</label>
        <select id="SortBy" onchange="window.location.href=this.value">
          <option value="?sort_by=manual">Featured</option>
          <option value="?sort_by=best-selling" {% if collection.sort_by == 'best-selling' %}selected{% endif %}>Best Selling</option>
          <option value="?sort_by=title-ascending" {% if collection.sort_by == 'title-ascending' %}selected{% endif %}>A-Z</option>
          <option value="?sort_by=title-descending" {% if collection.sort_by == 'title-descending' %}selected{% endif %}>Z-A</option>
          <option value="?sort_by=price-ascending" {% if collection.sort_by == 'price-ascending' %}selected{% endif %}>Price: Low to High</option>
          <option value="?sort_by=price-descending" {% if collection.sort_by == 'price-descending' %}selected{% endif %}>Price: High to Low</option>
          <option value="?sort_by=created-descending" {% if collection.sort_by == 'created-descending' %}selected{% endif %}>Newest</option>
        </select>
      </div>
    </div>
  </div>
</section>

<!-- Products Grid -->
<section class="collection-products">
  <div class="section-container">
    {% if collection.products.size > 0 %}
      <div class="products-grid">
        {% for product in collection.products %}
          <div class="product-card" data-product-id="{{ product.id }}">
            <a href="{{ product.url }}" class="product-link">
              {% if product.featured_image %}
                <div class="product-image-wrapper">
                  <img src="{{ product.featured_image | image_url: width: 600 }}" 
                       alt="{{ product.title }}" 
                       loading="lazy">
                  {% if product.images[1] %}
                    <img src="{{ product.images[1] | image_url: width: 600 }}" 
                         alt="{{ product.title }}" 
                         class="product-image-hover"
                         loading="lazy">
                  {% endif %}
                </div>
              {% else %}
                <div class="product-placeholder">No Image</div>
              {% endif %}
              
              <div class="product-info">
                <h3 class="product-title">{{ product.title }}</h3>
                
                {% if product.compare_at_price > product.price %}
                  <div class="product-prices">
                    <span class="product-price sale">{{ product.price | money }}</span>
                    <span class="product-price-compare">{{ product.compare_at_price | money }}</span>
                  </div>
                {% else %}
                  <p class="product-price">{{ product.price | money }}</p>
                {% endif %}
                
                {% if product.available == false %}
                  <p class="sold-out">Sold Out</p>
                {% endif %}
              </div>
            </a>
            
            {% if product.available %}
              <button class="add-to-cart-btn" 
                      onclick="openQuickAdd(event, '{{ product.variants.first.id }}', '{{ product.title | escape }}', '{{ product.price | money }}', '{{ product.featured_image | image_url: width: 200 }}')">
                Add to Cart
              </button>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      
      {% if paginate.pages > 1 %}
        <div class="pagination">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="pagination-link">&laquo; Previous</a>
          {% endif %}
          
          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="pagination-link">{{ part.title }}</a>
            {% else %}
              <span class="pagination-current">{{ part.title }}</span>
            {% endif %}
          {% endfor %}
          
          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="pagination-link">Next &raquo;</a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      <div class="no-products">
        <p>No products found in this collection.</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">View All Products</a>
      </div>
    {% endif %}
  </div>
</section>

<!-- Quick Add Modal -->
<div id="quickAddModal" class="quick-add-modal">
  <div class="quick-add-content">
    <button class="quick-add-close" onclick="closeQuickAdd()">&times;</button>
    
    <div class="quick-add-product">
      <img id="modalProductImage" src="" alt="" class="modal-product-image">
      
      <div class="modal-product-details">
        <h3 id="modalProductTitle"></h3>
        <p id="modalProductPrice" class="modal-product-price"></p>
        
        <div class="modal-quantity-control">
          <label for="modalQuantity">Quantity:</label>
          <div class="quantity-controls">
            <button class="quantity-btn" onclick="changeQuantity(-1)">-</button>
            <input type="number" id="modalQuantity" value="1" min="1" class="quantity-input">
            <button class="quantity-btn" onclick="changeQuantity(1)">+</button>
          </div>
        </div>
        
        <div class="modal-actions">
          <button class="btn btn-add-cart" onclick="addToCart()">
            <span class="btn-text">Add to Cart</span>
            <span class="btn-loader" style="display: none;">Adding...</span>
          </button>
        </div>
        
        <div class="modal-message" id="modalMessage" style="display: none;"></div>
      </div>
    </div>
  </div>
</div>

<script>
  let currentVariantId = null;

  function openQuickAdd(event, variantId, title, price, image) {
    event.preventDefault();
    event.stopPropagation();
    
    currentVariantId = variantId;
    document.getElementById('modalProductTitle').textContent = title;
    document.getElementById('modalProductPrice').textContent = price;
    document.getElementById('modalProductImage').src = image;
    document.getElementById('modalProductImage').alt = title;
    document.getElementById('modalQuantity').value = 1;
    document.getElementById('modalMessage').style.display = 'none';
    
    document.getElementById('quickAddModal').style.display = 'flex';
    document.body.style.overflow = 'hidden';
  }

  function closeQuickAdd() {
    document.getElementById('quickAddModal').style.display = 'none';
    document.body.style.overflow = 'auto';
  }

  function changeQuantity(change) {
    const quantityInput = document.getElementById('modalQuantity');
    let currentValue = parseInt(quantityInput.value) || 1;
    currentValue += change;
    if (currentValue < 1) currentValue = 1;
    quantityInput.value = currentValue;
  }

  function addToCart() {
    const quantity = parseInt(document.getElementById('modalQuantity').value) || 1;
    const btnText = document.querySelector('.btn-text');
    const btnLoader = document.querySelector('.btn-loader');
    const messageEl = document.getElementById('modalMessage');
    
    btnText.style.display = 'none';
    btnLoader.style.display = 'inline';
    messageEl.style.display = 'none';
    
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: currentVariantId,
        quantity: quantity
      })
    })
    .then(response => response.json())
    .then(data => {
      btnText.style.display = 'inline';
      btnLoader.style.display = 'none';
      
      messageEl.className = 'modal-message success';
      messageEl.textContent = '✓ Added to cart!';
      messageEl.style.display = 'block';
      
      // Show options
      setTimeout(() => {
        messageEl.innerHTML = `
          <div class="success-options">
            <p>✓ Added to cart!</p>
            <div class="option-buttons">
              <button onclick="closeQuickAdd()" class="btn-continue">Continue Shopping</button>
              <a href="/cart" class="btn-view-cart">View Cart</a>
            </div>
          </div>
        `;
      }, 500);
      
      // Update cart count if there's a cart indicator
      updateCartCount();
    })
    .catch(error => {
      console.error('Error:', error);
      btnText.style.display = 'inline';
      btnLoader.style.display = 'none';
      
      messageEl.className = 'modal-message error';
      messageEl.textContent = '✕ Error adding to cart. Please try again.';
      messageEl.style.display = 'block';
    });
  }

  function updateCartCount() {
    fetch('/cart.js')
      .then(response => response.json())
      .then(cart => {
        const cartCountElements = document.querySelectorAll('.cart-count');
        cartCountElements.forEach(el => {
          el.textContent = cart.item_count;
        });
      });
  }

  // Close modal when clicking outside
  document.addEventListener('click', function(event) {
    const modal = document.getElementById('quickAddModal');
    if (event.target === modal) {
      closeQuickAdd();
    }
  });
</script>

