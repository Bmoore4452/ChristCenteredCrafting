<script>
  let currentProduct = 0;
  let autoPlayInterval;
  let isTransitioning = false;
  const totalProducts = 3;

  function selectProduct(index) {
    if (isTransitioning || index === currentProduct) return;
    
    isTransitioning = true;
    const displays = document.querySelectorAll('.gallery-display');
    const galleryMain = document.querySelector('.gallery-main');
    const galleryRect = galleryMain.getBoundingClientRect();
    
    // Calculate position based on product index (simulate thumbnail positions)
    // Left (-40%), Center (0%), Right (40%) of gallery width
    const positions = [-0.4, 0, 0.4];
    const offsetX = positions[index] * galleryRect.width;
    const offsetY = galleryRect.height * 0.4; // Come from bottom
    
    // Set CSS custom properties for the incoming display
    displays[index].style.setProperty('--genie-x', `${offsetX}px`);
    displays[index].style.setProperty('--genie-y', `${offsetY}px`);
    
    // Add genie-out effect to current display
    displays[currentProduct].classList.add('genie-out');
    
    // Wait for genie-out animation, then switch
    setTimeout(() => {
      // Remove active and genie-out from all
      displays.forEach(display => {
        display.classList.remove('active', 'genie-out');
      });
      
      // Add active class to selected
      displays[index].classList.add('active');
      
      currentProduct = index;
      
      // Allow next transition after genie-in completes
      setTimeout(() => {
        isTransitioning = false;
      }, 800);
    }, 600);
  }

  function nextProduct() {
    const nextIndex = (currentProduct + 1) % totalProducts;
    selectProduct(nextIndex);
  }

  // Start auto-play (4 seconds)
  autoPlayInterval = setInterval(nextProduct, 4000);

  // Pause on hover
  const galleryContainer = document.querySelector('.gallery-container');
  galleryContainer.addEventListener('mouseenter', () => {
    clearInterval(autoPlayInterval);
  });

  galleryContainer.addEventListener('mouseleave', () => {
    autoPlayInterval = setInterval(nextProduct, 4000);
  });

  // Scroll-triggered entrance animation
  const observerOptions = {
    threshold: 0.2,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-in');
      }
    });
  }, observerOptions);

  // Observe featured section elements
  const featuredSection = document.querySelector('.featured-products');
  const sectionTitle = featuredSection.querySelector('.section-title');
  const sectionSubtitle = featuredSection.querySelector('.section-subtitle');
  const galleryContainerObs = featuredSection.querySelector('.gallery-container');
  
  observer.observe(sectionTitle);
  observer.observe(sectionSubtitle);
  observer.observe(galleryContainerObs);
</script>

